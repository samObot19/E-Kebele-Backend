{
  "watch": [
    "src",
    ".env"
  ],
  "ext": "ts,json,env",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "node_modules",
    ".git",
    "dist"
  ],
  "exec": "ts-node -r tsconfig-paths/register src/index.ts",
  "verbose": true,
  "env": {
    "NODE_ENV": "development",
    "DEBUG": "app:*",
    "PORT": "3000"
  },
  "execMap": {
    "ts": "ts-node"
  },
  "delay": "1000",
  "colour": true
}